<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Home Page</title>

    <style>
      body {
        background-color: #000;
        color: #fff;
        font-family: Arial, sans-serif;
        padding: 30px;
      }

      h1 {
        text-align: center;
        margin-bottom: 20px;
      }

      form {
        text-align: center;
        margin-bottom: 30px;
      }

      input {
        padding: 8px;
        width: 250px;
        border-radius: 4px;
        border: none;
        margin-right: 10px;
      }

      button {
        padding: 8px 15px;
        background-color: #1e90ff;
        color: #fff;
        border: none;
        border-radius: 4px;
        cursor: pointer;
      }

      button:hover {
        background-color: #0b5ed7;
      }

      p {
        text-align: center;
        margin: 15px 0;
      }

      table {
        width: 100%;
        border-collapse: collapse;
        margin-top: 20px;
      }

      th,
      td {
        border: 1px solid #555;
        padding: 10px;
        text-align: center;
      }

      th {
        background-color: #111;
      }

      tr:nth-child(even) {
        background-color: #1a1a1a;
      }

      a {
        color: #1e90ff;
      }
    </style>
  </head>

  <body>
    <h1>ðŸ”— URL Shortener</h1>

    <% if (locals.id) { %>
      <p>
        URL Generated:
        <a href="/url/<%= id %>" target="_blank">
          http://localhost:8001/url/<%= id %>
        </a>
      </p>
    <% } %>

    <div>
      <form method="POST" action="/url">
        <label>Enter Your Original URL</label><br /><br />
        <input type="text" name="url" placeholder="https://example.com" />
        <button type="submit">Generate</button>
      </form>
    </div>

    <div>
      <% if (locals.urls) { %>
        <table>
          <thead>
            <tr>
              <th>S. No</th>
              <th>ShortID</th>
              <th>Redirect</th>
              <th>Clicks</th>
            </tr>
          </thead>

          <tbody>
            <% urls.forEach((url, index) => { %>
              <tr>
                <td><%= index + 1 %></td>
                <td><%= url.shortId %></td>
                <td><%= url.redirectURL %></td>
                <td><%= url.visitHistory.length %></td>
              </tr>
            <% }) %>
          </tbody>
        </table>
      <% } %>
    </div>
  </body>
</html>
